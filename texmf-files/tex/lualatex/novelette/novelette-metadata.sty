% Not the most compact way to change date format, but easy to read:
\StrBehind{\pdffeedback creationdate}{:}[\temp@s] % Leading D: removed.
\StrMid{\temp@s}{1}{4}[\nvt@year]
\StrMid{\temp@s}{5}{6}[\nvt@mon]
\StrMid{\temp@s}{7}{8}[\nvt@day]
\StrMid{\temp@s}{9}{10}[\nvt@hr]
\StrMid{\temp@s}{11}{12}[\nvt@min]
\StrMid{\temp@s}{13}{14}[\nvt@sec]
\StrGobbleLeft{\temp@s}{14}[\temp@s]
\def\nvt@tzsign{+}
\IfBeginWith{\temp@s}{-}{\def\nvt@tzsign{-}}{}
\StrMid{\temp@s}{2}{6}[\nvt@zone]
\ifthenelse{\equal{\nvt@zone}{}}{\def\nvt@zone{00:00}}{}
\StrSubstitute{\nvt@zone}{'}{:}[\nvt@zone]
\edef\nvt@modifyDate{\nvt@year-\nvt@mon-\nvt@day\space%
   T\nvt@hr:\nvt@min:\nvt@sec\nvt@tzsign\nvt@zone}
\edef\nvt@createDate{\nvt@modifyDate}
\edef\nvt@metadataDate{\nvt@modifyDate}
