    /OutputIntents [ <<%
    /Type/OutputIntent%
    /S/GTS_PDFX%
    \OI@conditionString%
    \OI@identifierString%
    \OI@infoString%
    \OI@registryString%
    >> ]%
  }%
  \endgroup
}
