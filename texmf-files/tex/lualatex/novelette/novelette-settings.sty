  \ifthenelse{\equal{\temp@d}{dark}}{\let\nn@font\f@dark\gdef\nn@lf{dark}}{}
  \check@align
  \if@ok\xdef\nn@align{\temp@d}\fi
  \check@scale
  \if@ok\xdef\nn@scale{\temp@d}\fi
  \if@ok\else\bad@style{namestyle}\fi
}
