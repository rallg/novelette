%% Front matter, main matter:
\def\frontmatter{%
  \ifin@mainmatter%
    \nvt@err{Cannot use \noexpand\frontmatter after \noexpand\mainmatter}%
      {You wrote the commands in wrong order.^^J%
       Or did you use \noexpand\mainmatter twice?}%
