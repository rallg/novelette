%% Although mainmatter sets printable page number to 1, PDF page number is 7.
\def\mainmatter{%
  \ifin@mainmatter\else%
    \cleartorecto%
    \ifdefined\preamble@file\else%
      \ifin@frontmatter%
        \edef\temp@n{\fpeval{\c@page-1}}%
        \nvt@compare{\temp@n=6}{}{%
          \nvt@err{Too much or too little frontmatter}%
            {The start of mainmatter is too early, or too late.^^J%
             Unless compiling only subdoc, there must be exactly six pages^^J%
             in frontmatter. You create five pages, then a blank page is^^J%
             added automatically. But you have \temp@n\space pages total.^^J%
             Did you write anything outside of the pagei-pagev environments?}%
        }%
      \fi%
    \fi%
    \pagenumbering{arabic}%
    \setcounter{page}{1}%
    \pagestyle{normal}%
    \gdef\verso@head{\allsmcp{\thetitle}}% Default.
    \gdef\recto@head{\textit{\theauthor}}% Default.
